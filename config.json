{
  "memory": {
    "memory_usage_percent": 50
  },
  "processing": {
    "enable_cuda": true,
    "chunk_size_mb": 4096,
    "record_chunk_size": 200000,
    "max_memory_records": 15000000
  },
  "io": {
    "temp_directory": "./temp",
    "output_directory": "./output",
    "checkpoint_auto_save_interval_seconds": 30
  },
  "deduplication": {
    "case_sensitive_usernames": false,
    "normalize_urls": true,
    "email_username_only": false,
    "allow_two_field_lines": true
  },
  "logging": {
    "verbosity": "normal"
  },
  "performance": {
    "enable_monitoring": true,
    "report_interval_seconds": 30,
    "show_detailed_metrics": true
  },
  "cuda": {
    "gpu_memory_usage_percent": 95,
    "estimated_bytes_per_record": 500,
    "min_batch_size": 200000,
    "max_batch_size": 8000000,
    "max_url_buffer_size": 2048,
    "max_username_buffer_size": 512,
    "threads_per_block": 1024,
    "batch_sizes": {
      "small": 200000,
      "medium": 1000000,
      "large": 2000000,
      "xlarge": 4000000
    }
  }
}